<div class="container m-5">
<h2> <%= @cocktail.name %> </h2>
<ul>
<% @doses.each do |dose| %>
  <li><%= "#{dose.ingredient.name} - #{dose.description}"%></li>
  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
</ul>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<p><%= link_to "Back to cocktail list", cocktails_path %></p>
</div>
